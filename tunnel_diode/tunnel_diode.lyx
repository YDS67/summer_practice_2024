\begin_layout Title
Tunnel diode
\end_layout

\begin_layout Section
Introduction
\end_layout

\begin_layout Standard
IV-curve (Esaki)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}T\left(E_{\perp}\right)\left[\ln\left(1+\exp\frac{E_{Fn}-E_{\perp}}{kT}\right)-\ln\left(1+\exp\frac{E_{Fp}-eV-E_{\perp}}{kT}\right)\right]dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Section
Electrons
\end_layout

\begin_layout Standard
Distribution of elecrons on the 
\begin_inset Formula $n$
\end_inset

 side:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
n\left(p_{\perp}\right)=\frac{2\cdot2\pi}{\left(2\pi\hbar\right)^{3}}\int_{0}^{\infty}\frac{p_{||}dp_{\parallel}}{1+\exp\frac{p_{c}^{2}+p_{\perp}^{2}-p_{F}^{2}+p_{\parallel}^{2}}{2m_{e}kT}}=\frac{m_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}\frac{du}{1+\exp\frac{p_{c}^{2}+p_{\perp}^{2}-p_{F}^{2}}{2m_{e}kT}e^{u}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
n\left(p_{\perp}\right)dp_{\perp}=\frac{m_{e}kT}{2\pi^{2}\hbar^{3}}\ln\left(1+\exp\frac{p_{F}^{2}-p_{c}^{2}-p_{\perp}^{2}}{2m_{e}kT}\right)dp_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
dp_{\perp}=\frac{\sqrt{m_{e}}}{\sqrt{2E_{\perp}}}dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
n\left(E_{\perp}\right)dE_{\perp}=\frac{m_{e}kT}{2\pi^{2}\hbar^{3}}\ln\left(1+\exp\frac{E_{F}-E_{c}-E_{\perp}}{kT}\right)\frac{\sqrt{m_{e}}}{\sqrt{2E_{\perp}}}dE_{\perp}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
v\left(E_{\perp}\right)=\frac{\sqrt{2E_{\perp}}}{\sqrt{m_{e}}}
\]

\end_inset


\end_layout

\begin_layout Standard
General formula for the current is:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I\left(V\right)=e\int_{0}^{\infty}T\left(E_{\perp}\right)n\left(E_{\perp}\right)v\left(E_{\perp}\right)dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
The majority electron current:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{1}\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}T_{1}\left(E_{\perp}\right)\ln\left(1+\exp\frac{E_{F}-E_{c}-E_{\perp}}{kT}\right)dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
Minority electron current will be different due to 
\begin_inset Formula $E_{c}$
\end_inset

 on that side being raised by 
\begin_inset Formula $\Delta\Phi$
\end_inset

 â€” the equilibrium energy barrier or the work function difference between
 N and P semiconductors.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{2}\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}T_{2}\left(E_{\perp}\right)\ln\left(1+\exp\frac{E_{F}-E_{c}-\Delta\Phi-E_{\perp}}{kT}\right)dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
However, the transmission probabilities 
\begin_inset Formula $T_{1},T_{2}$
\end_inset

 will also be different.
 There's nothing preventing the minority electrons from reaching the N side,
 so:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T_{2}\left(E_{\perp}\right)=1
\]

\end_inset


\end_layout

\begin_layout Standard
Then the minority current doesn't depend on voltage and we can integrate
 it:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{2}\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}\ln\left(1+\exp\frac{E_{F}-E_{c}-\Delta\Phi-E_{\perp}}{kT}\right)dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
Moreover, we have a similar dependence for 
\begin_inset Formula $T_{1}$
\end_inset

, which gives us:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T_{1}\left(E_{\perp}>\Delta\Phi-eV\right)=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{\Delta\Phi-eV}^{\infty}\ln\left(1+\exp\frac{E_{F}-E_{c}-E_{\perp}}{kT}\right)dE_{\perp}=\int_{0}^{\infty}\ln\left(1+\exp\frac{E_{F}-E_{c}-\Delta\Phi+eV-E_{\perp}}{kT}\right)dE_{\perp}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
I_{e}\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\Delta\Phi-eV}T_{1}\left(E_{\perp}\right)\ln\left(1+\exp\frac{E_{F}-E_{c}-E_{\perp}}{kT}\right)dE_{\perp} & +\\
+\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\infty}\left[\ln\left(1+\exp\frac{E_{F}-E_{c}+eV-\Delta\Phi-E_{\perp}}{kT}\right)-\ln\left(1+\exp\frac{E_{F}-E_{c}-\Delta\Phi-E_{\perp}}{kT}\right)\right]dE_{\perp} & .
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
For simplicity we assume that:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\exp\frac{E_{F}-E_{c}-\Delta\Phi}{kT}\ll1
\]

\end_inset


\end_layout

\begin_layout Standard
Then our expression for current simplifies to:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
I\left(V\right)=\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\int_{0}^{\Delta\Phi-eV}T_{1}\left(E_{\perp}\right)\ln\left(1+\exp\frac{E_{F}-E_{c}-E_{\perp}}{kT}\right)dE_{\perp} & +\\
+\frac{em_{e}kT}{2\pi^{2}\hbar^{3}}\exp\frac{E_{F}-E_{c}-\Delta\Phi}{kT}\left[\exp\left(\frac{eV}{kT}\right)-1\right]\int_{0}^{\infty}\exp\left(-\frac{E_{\perp}}{kT}\right)dE_{\perp} & .
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Or:
\end_layout

